@using LeaveSystem.Web.Pages.HrPanel
@using LeaveSystem.Web.Pages.LeaveRequests.CreatingLeaveRequest
@using LeaveSystem.Web.Pages.LeaveRequests.ShowingLeaveRequests
@using LeaveSystem.Web.Pages.UserPanel
@using LeaveSystem.Web.Pages.UsersManagement;

<RadzenSidebar @bind-Expanded="@SidebarExpanded">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Text="Home" Icon="home" Path="" />
        <AuthorizeView Policy="@CreateLeaveRequest.PolicyName" Context="CreateLeaveRequest">
            <RadzenPanelMenuItem Text="Create leave request" Icon="note_add" Path="create-leave-request" />
        </AuthorizeView>
        <AuthorizeView Policy="@ShowUserPanel.PolicyName" Context="ShowUserPanel">
            <RadzenPanelMenuItem Text="User panel" Icon="assessment" Path="user-panel" />
        </AuthorizeView>
        <AuthorizeView Policy="@ShowHrPanel.PolicyName" Context="ShowHrPanel">
            <RadzenPanelMenuItem Text="HR panel" Icon="list" Path="hr-panel" />
        </AuthorizeView>
        <AuthorizeView Policy="@UsersPage.PolicyName" Context="ShowUserPage">
            <RadzenPanelMenuItem Text="Users" Icon="account_circle" Path="users" />
        </AuthorizeView>
    </RadzenPanelMenu>
</RadzenSidebar>

@code {
    [Parameter]
    public bool SidebarExpanded { get; set; } = true;
}

